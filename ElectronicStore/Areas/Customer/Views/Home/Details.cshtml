                                <div class="carousel-item active">
                                    <img src="@Model.FirstOrDefault().Products.ProductImages.ElementAt(i).ImageUrl" alt="Card Image" width="100%" height="100%" style="margin-top:125px;">
                                </div>
                            }
                            else
