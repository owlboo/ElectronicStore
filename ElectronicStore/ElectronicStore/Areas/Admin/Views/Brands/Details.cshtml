@model ElectronicStore.Models.Brands
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

br /><br />
<h2 class="text-info">Details</h2>
<div class="container justify-content-between">
    <form method="get" asp-action="Details">

        <div class="p-4 border rounded row">
            <input hidden asp-for="Id" />
            <div class="col-8 border-right">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Name" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="MetaTitle"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="MetaTitle" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SeoTitle"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SeoTitle" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ParenId"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ParenId" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="DisplayOrder" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="MetaKeyword"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="MetaKeyword" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="MetaDescription"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="MetaDescription" readonly type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="CreatedDate"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="CreatedDate" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="CreatedBy"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="CreatedBy" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ModifiedDate"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ModifiedDate" readonly type="text" id="modified" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ModifiedBy"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ModifiedBy" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Status" type="checkbox" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ShowOnHome"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ShowOnHome" readonly type="checkbox" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-1">
            </div>
            <div class="col-3">
                <img src="@Model.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9; margin-top:70%;" alt="Logo" />
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Update</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>
        </div>
    </form>
</div>

